    <!-- Main Application Script -->
    <script>
        // Configuration
        const API_BASE = '';
        const POLL_STATUS_INTERVAL = 2000;
        const POLL_SIGNALS_INTERVAL = 3000;
        const POLL_NEWS_INTERVAL = 60000;

        // State
        let statusData = null;
        let strategiesData = null;
        let signalsData = null;
        let newsData = null;
        let evtSource = null;
        let tradingViewWidget = null;

        // Helpers
        function getToken() {
            return localStorage.getItem('CONTROL_PLANE_TOKEN') || '';
        }

        async function fetchJson(path, options = {}) {
            const start = Date.now();
            try {
                const headers = {
                    'Content-Type': 'application/json',
                    ...options.headers
                };

                if (options.method === 'POST' || options.requireAuth) {
                    const token = getToken();
                    if (token) {
                        headers['Authorization'] = `Bearer ${token}`;
                    }
                }

                const response = await fetch(API_BASE + path, {
                    ...options,
                    headers
                });

                const latency = Date.now() - start;
                updateMetric('latency', `${latency}ms`, latency < 100 ? 'good' : latency < 500 ? 'warning' : 'error');

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }

                return await response.json();
            } catch (error) {
                console.error(`Fetch error (${path}):`, error);
                return null;
            }
        }

        function updateMetric(key, value, className = '') {
            const elem = document.getElementById(`metric-${key}`);
            if (elem) {
                elem.textContent = value;
                elem.className = 'metric-value ' + className;
            }
        }

        function formatTime(isoString) {
            if (!isoString) return '--';
            try {
                const date = new Date(isoString);
                const now = new Date();
                const diffSec = Math.floor((now - date) / 1000);
                
                if (diffSec < 60) return `${diffSec}s ago`;
                if (diffSec < 3600) return `${Math.floor(diffSec / 60)}m ago`;
                return date.toLocaleTimeString();
            } catch {
                return '--';
            }
        }

        // Settings Modal
        function openSettings() {
            document.getElementById('settings-modal').classList.add('active');
            document.getElementById('token-input').value = getToken();
        }

        function closeSettings() {
            document.getElementById('settings-modal').classList.remove('active');
        }

        function saveSettings() {
            const token = document.getElementById('token-input').value.trim();
            localStorage.setItem('CONTROL_PLANE_TOKEN', token);
            closeSettings();
        }

        // Tab Switching
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(`tab-${tabName}`).classList.add('active');

            if (tabName === 'news') {
                pollNews();
            }
        }

        // Poll Status
        async function pollStatus() {
            const data = await fetchJson('/api/status');
            if (!data) return;

            statusData = data;

            // Update top bar badges
            const modeText = data.mode.toUpperCase();
            const modeBadge = document.getElementById('mode-badge');
            modeBadge.textContent = modeText;
            modeBadge.className = `badge ${data.mode === 'live' ? 'live' : 'paper'}`;

            const execBadge = document.getElementById('execution-badge');
            if (data.execution_enabled) {
                execBadge.textContent = 'EXECUTION ENABLED';
                execBadge.className = 'badge live';
            } else {
                execBadge.textContent = 'SIGNALS-ONLY';
                execBadge.className = 'badge signals-only';
            }

            document.getElementById('last-update').textContent = formatTime(data.last_scan_at);

            // Update metrics
            updateMetric('mode', modeText, data.mode === 'live' ? 'warning' : '');
            updateMetric('execution', data.execution_enabled ? 'ON' : 'OFF', data.execution_enabled ? 'warning' : 'good');
            updateMetric('accounts', data.accounts_loaded || 0);
            updateMetric('capable', data.accounts_execution_capable || 0, data.accounts_execution_capable > 0 ? 'warning' : '');
            updateMetric('signals', data.last_signals_generated || 0);
            updateMetric('executed', data.last_executed_count || 0, data.last_executed_count > 0 ? 'warning' : 'good');
            updateMetric('market', data.weekend_indicator ? 'CLOSED' : 'OPEN', data.weekend_indicator ? 'error' : 'good');
        }

        // Poll Strategies
        async function pollStrategies() {
            const data = await fetchJson('/api/strategies/overview');
            if (!data || !data.strategies) return;

            strategiesData = data;

            const container = document.getElementById('strategy-buttons');
            container.innerHTML = '';

            data.strategies.forEach(strategy => {
                const btn = document.createElement('button');
                btn.className = 'strategy-btn' + (strategy.active ? ' active' : '');
                btn.textContent = strategy.name;
                btn.onclick = () => switchStrategy(strategy.key);
                container.appendChild(btn);
            });
        }

        // Switch Strategy
        async function switchStrategy(key) {
            const confirmed = confirm(`Switch to strategy: ${key}?\n\nThis will update the config but NOT place any orders.`);
            if (!confirmed) return;

            const result = await fetchJson('/api/config', {
                method: 'POST',
                body: JSON.stringify({ active_strategy_key: key })
            });

            if (result && result.status === 'ok') {
                await pollStrategies();
                await pollStatus();
            } else {
                alert('Failed to switch strategy. Check token in Settings.');
            }
        }

        // Poll Signals
        async function pollSignals() {
            const data = await fetchJson('/api/signals/pending');
            if (!data) return;

            signalsData = data;

            const container = document.getElementById('signals-queue');
            
            if (!data.signals || data.signals.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì°</div>
                        <p style="font-size: 0.875rem;">No signals yet</p>
                    </div>
                `;
                document.getElementById('signal-overlay').style.display = 'none';
                return;
            }

            // Show first signal in overlay
            const firstSignal = data.signals[0];
            if (firstSignal) {
                document.getElementById('signal-overlay').style.display = 'block';
                document.getElementById('signal-instrument').textContent = firstSignal.instrument || 'UNKNOWN';
                
                const direction = (firstSignal.side || 'UNKNOWN').toUpperCase();
                const directionElem = document.getElementById('signal-direction');
                directionElem.textContent = direction;
                directionElem.className = 'signal-direction ' + direction.toLowerCase();

                const conviction = firstSignal.confidence || firstSignal.probability || 0;
                document.getElementById('signal-conviction').textContent = `${Math.round(conviction * 100)}%`;
                document.getElementById('conviction-fill').style.width = `${conviction * 100}%`;
                
                document.getElementById('signal-reasoning').textContent = 
                    firstSignal.reasoning || firstSignal.strategy || 'Signal detected';
            }

            // Render queue
            container.innerHTML = data.signals.slice(0, 10).map(signal => `
                <div class="signal-item">
                    <div class="signal-item-header">
                        <span class="signal-item-instrument">${signal.instrument || 'UNKNOWN'}</span>
                        <span class="signal-item-side ${(signal.side || '').toLowerCase()}">${(signal.side || 'UNKNOWN').toUpperCase()}</span>
                    </div>
                    <div class="signal-item-meta">
                        Confidence: ${Math.round((signal.confidence || signal.probability || 0) * 100)}%
                        ${signal.strategy ? ` ‚Ä¢ ${signal.strategy}` : ''}
                    </div>
                </div>
            `).join('');
        }

        // Poll Positions
        async function pollPositions() {
            const data = await fetchJson('/api/positions');
            if (!data) return;

            const container = document.getElementById('positions-list');
            
            if (!data.positions || data.positions.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìä</div>
                        <p style="font-size: 0.875rem;">${data.reason || 'No positions'}</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = data.positions.map(pos => `
                <div class="signal-item">
                    <div class="signal-item-header">
                        <span class="signal-item-instrument">${pos.instrument}</span>
                        <span class="signal-item-side ${pos.side.toLowerCase()}">${pos.side}</span>
                    </div>
                    <div class="signal-item-meta">
                        Units: ${pos.units} ‚Ä¢ P/L: ${pos.unrealized_pl || 0}
                    </div>
                </div>
            `).join('');
        }

        // Poll News
        async function pollNews() {
            const data = await fetchJson('/api/news');
            if (!data) return;

            newsData = data;

            const container = document.getElementById('news-feed');
            
            if (!data.items || data.items.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì∞</div>
                        <p>${data.reason || 'No news available'}</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = data.items.map(item => `
                <div class="news-item">
                    <div class="news-item-header">
                        <div class="news-item-title">${item.title || item.headline}</div>
                        <div class="news-item-time">${formatTime(item.timestamp || item.published_at)}</div>
                    </div>
                    ${item.summary || item.description ? `<div class="news-item-body">${item.summary || item.description}</div>` : ''}
                </div>
            `).join('');
        }

        // SSE Logs
        function connectLogsSSE() {
            if (evtSource) {
                evtSource.close();
            }

            evtSource = new EventSource('/api/logs/stream');
            const terminal = document.getElementById('terminal');

            evtSource.onmessage = (event) => {
                const line = document.createElement('div');
                line.className = 'terminal-line';
                
                const text = event.data;
                if (text.toLowerCase().includes('error')) {
                    line.className += ' error';
                } else if (text.toLowerCase().includes('warning')) {
                    line.className += ' warning';
                } else if (text.toLowerCase().includes('info')) {
                    line.className += ' info';
                }
                
                line.textContent = text;
                terminal.appendChild(line);
                
                // Auto-scroll and limit lines
                if (terminal.children.length > 500) {
                    terminal.removeChild(terminal.firstChild);
                }
                terminal.scrollTop = terminal.scrollHeight;
            };

            evtSource.onerror = () => {
                const line = document.createElement('div');
                line.className = 'terminal-line error';
                line.textContent = 'Log stream disconnected. Reconnecting...';
                terminal.appendChild(line);
                
                setTimeout(connectLogsSSE, 5000);
            };
        }

        // Initialize TradingView Widget
        function initTradingView() {
            if (typeof TradingView === 'undefined') {
                setTimeout(initTradingView, 1000);
                return;
            }

            tradingViewWidget = new TradingView.widget({
                container_id: "tradingview_terminal",
                width: "100%",
                height: "600",
                symbol: "OANDA:XAUUSD",
                interval: "5",
                timezone: "Etc/UTC",
                theme: "dark",
                style: "1",
                locale: "en",
                toolbar_bg: "#0a0e1a",
                enable_publishing: false,
                hide_side_toolbar: false,
                allow_symbol_change: true,
                save_image: false,
                studies: ["MASimple@tv-basicstudies", "RSI@tv-basicstudies"],
                backgroundColor: "#0a0e1a",
                gridColor: "#1a202e",
                hide_legend: false,
                hide_top_toolbar: false
            });
        }

        // Initialize Application
        async function init() {
            console.log('üöÄ AI-QUANT | TOTAL COMMAND initializing...');

            // Initial data load
            await Promise.all([
                pollStatus(),
                pollStrategies(),
                pollSignals(),
                pollPositions()
            ]);

            // Start polling
            setInterval(pollStatus, POLL_STATUS_INTERVAL);
            setInterval(pollSignals, POLL_SIGNALS_INTERVAL);
            setInterval(pollPositions, POLL_SIGNALS_INTERVAL);
            setInterval(pollNews, POLL_NEWS_INTERVAL);

            // Connect SSE logs
            connectLogsSSE();

            // Initialize TradingView
            initTradingView();

            console.log('‚úÖ Dashboard ready');
        }

        // Start on load
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    </script>
</body>
</html>
