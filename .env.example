# Environment Variables Template
# Copy this to .env and fill in real values
# .env is gitignored - NEVER commit it

# OANDA Trading (REQUIRED)
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
OANDA_ENV=practice

# Telegram Notifications (OPTIONAL)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# News/Data APIs (OPTIONAL)
NEWSAPI_API_KEY=
ALPHAVANTAGE_API_KEY=

# MarketAux Keys (OPTIONAL - comma-separated for rotation)
# Example: MARKETAUX_KEYS=key1,key2,key3
MARKETAUX_KEYS=

# OpenAI (AI insights)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini


# AI (Optional)
AI_INSIGHTS_ENABLED=0
AI_INSIGHTS_MODE=advisory
AI_PROVIDER=openai
# To enable fallback: AI_PROVIDER_CHAIN=openai,gemini
AI_PROVIDER_CHAIN=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-lite
